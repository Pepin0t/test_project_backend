{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "plugin:jest/recommended"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["jest"],
	"rules": {
		"indent": ["warn", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["warn", "windows"],
		"quotes": ["warn", "double"],
		"semi": ["warn", "always"],
		"no-console": "warn",
		"no-unused-vars": "warn"
	},
	"settings": {}
}
